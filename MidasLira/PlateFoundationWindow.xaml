<Window x:Class="MidasLira.PlateFoundationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Передача жесткостей плитных фундаментов"
        Height="440"
        Width="460"
        WindowStartupLocation="CenterScreen"
        Background="#FFF9FAFB"
        SnapsToDevicePixels="True"
        ResizeMode="NoResize">

    <Window.Effect>
        <DropShadowEffect BlurRadius="15" Opacity="0.3" ShadowDepth="0"/>
    </Window.Effect>

    <Window.Resources>
        <!-- Общий стиль текста -->
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="SF Pro Text, Segoe UI, Arial"/>
            <Setter Property="Foreground" Value="#3C3C43"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="SF Pro Text, Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Margin" Value="0,4,0,10"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <!-- Стиль для ProgressBar в стиле macOS -->
        <Style x:Key="MacOSProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Background" Value="#E5E5EA"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4A90E2"/>
        </Style>

        <!-- Кнопки macOS-style -->
        <Style TargetType="Button">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontFamily" Value="SF Pro Text, Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Наведение -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#3F7FCC"
                                                            Duration="0:0:0.25"
                                                            FillBehavior="HoldEnd"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#4A90E2"
                                                            Duration="0:0:0.25"
                                                            FillBehavior="HoldEnd"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Нажатие -->
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#366EAD"
                                                            Duration="0:0:0.1"
                                                            FillBehavior="HoldEnd"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.9"
                                                             Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="1"
                                                             Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Статус -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Text, Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="384">

            <!-- Excel -->
            <Label Content="Выберите файл Excel:" FontWeight="Bold"/>
            <TextBox Name="ExcelFileTextBox"/>
            <Button Content="..." Click="SelectExcelButton_Click"/>

            <!-- ЛИРА-САПР -->
            <Label Content="Выберите файл ЛИРА-САПР:" FontWeight="Bold"/>
            <TextBox Name="LirasaprFileTextBox"/>
            <Button Content="..." Click="SelectLirasaprButton_Click"/>

            <!-- ProgressBar -->
            <ProgressBar x:Name="ProgressBar" 
                        Style="{StaticResource MacOSProgressBar}"
                        Minimum="0" 
                        Maximum="100" 
                        Value="0"
                        Visibility="Collapsed"/>

            <!-- Текст прогресса -->
            <TextBlock x:Name="ProgressText" 
                      Text=""
                      Foreground="#6D6D73"
                      FontSize="12"
                      HorizontalAlignment="Center"/>

            <!-- Текст статуса -->
            <TextBlock x:Name="StatusText" 
                      Text=""
                      FontSize="13"
                      Margin="0,5,0,0"
                      HorizontalAlignment="Center"/>

            <!-- Обработать -->
            <Button x:Name="ProcessButton" Content="Обработать" Click="ProcessButton_Click"/>

            <!-- Закрыть -->
            <Button Content="Закрыть" Click="CloseButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
