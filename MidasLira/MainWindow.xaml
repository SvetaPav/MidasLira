<Window x:Class="MidasLira.UserInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приложение для обработки данных Midas" Height="300" Width="400">

    <!-- Основное окно -->
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">

            <!-- Блок выбора файла Excel -->
            <Label Content="Выберите файл Excel:" FontWeight="Bold"/>
            <TextBox Name="ExcelFileTextBox" Width="300" IsReadOnly="True"/>
            <Button Content="..." Click="SelectExcelButton_Click" Margin="5"/>

            <!-- Блок выбора файла ЛИРА-САПР -->
            <Label Content="Выберите файл ЛИРА-САПР:" FontWeight="Bold"/>
            <TextBox Name="LirasaprFileTextBox" Width="300" IsReadOnly="True"/>
            <Button Content="..." Click="SelectLirasaprButton_Click" Margin="5"/>

            <!-- Кнопка старта обработки -->
            <Button Content="Обработать" Click="ProcessButton_Click" Margin="10" Padding="10"/>

            <!-- Панель статуса -->
            <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="Green" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>